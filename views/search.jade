extends layout

block content
	script(type="text/template", class="logRow")
		div.row.log-row
			div.col-lg-12
				div.col-lg-2 <%= timestamp %>
				div.col-lg-10
					div.pull-right
						<a href="#" data-id=<%= _id %> class="btn btn-primary btn-xs view-log">View</a>
					span.label.label-primary <%= source %>
					<% _.each(tags, function(tag) { %>
					span.label.label-default <%= tag %>
					<% }) %>
					span.label.label-info <%= type %>
					div.message <%= message %>
		hr

	script(type="text/template", class="logDetail")
		div.row
			div.col-lg-2 
				span.label.label-info Source
			div.col-lg-9 
				span.label.label-primary <%= source %>
		div.vertical-space
		div.row
			div.col-lg-2 
				span.label.label-info Tags
			div.col-lg-9 
				<% _.each(tags, function(tag) { %>
				span.label.label-default <%= tag %>
				<% }) %>
		div.vertical-space
		div.row
			div.col-lg-2 
				span.label.label-info Type
			div.col-lg-9 
				span.label.label-warning <%= type %>
		div.vertical-space
		div.row
			div.col-lg-2 
				span.label.label-info Created
			div.col-lg-9 
				span.label.label-warning <%= timestamp %>
		hr
		div.row
			div.col-lg-2 
				span.label.label-info Message
			div.col-lg-9 <%= message %>

	div.container-fluid
		div.row
			div.col-lg-12
				h1.page-header= title
