		//- 	div.col-lg-12
		//- 		div.panel.panel-default
		//- 			div.panel-heading Timeline
		//- 			div.panel-body
		//- 				div.graph
		//- 					div(style="height:300px")#graph-container
		div.row
			div.col-lg-12
				div.panel.panel-default
					div.panel-heading Logs
					div.panel-body
						div.log-results


